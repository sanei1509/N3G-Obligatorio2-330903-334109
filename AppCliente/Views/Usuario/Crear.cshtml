@model AppCliente.Models.Usuarios.CrearUsuarioDto

@{
    ViewData["Title"] = "Crear Usuario";
}

<h2>Crear Usuario</h2>

<form asp-action="Crear" method="post">

    <input type="text" asp-for="CorreoResponsable" hidden  />

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Apellido"></label>
        <input asp-for="Apellido" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Correo"></label>
        <input asp-for="Correo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Clave"></label>
        <input asp-for="Clave" type="password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Telefono"></label>
        <input asp-for="Telefono" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Crear</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-danger">@ViewBag.Message</div>
}
