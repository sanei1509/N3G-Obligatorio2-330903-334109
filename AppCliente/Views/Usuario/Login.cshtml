@model AppCliente.Models.Usuarios.LoginEntradaDto
@using AppCliente.Models.Envios
@using Microsoft.AspNetCore.Http



@{
    ViewData["Title"] = "Login / Consulta Tracking";
    var nombre = Context.Session.GetString("userName");
    // Para leer el query string
    var nroTrackingQuery = Context.Request.Query["nroTracking"].ToString();
}

<h2>@ViewData["Title"]</h2>

@if (!string.IsNullOrEmpty(nombre))
{
    <div class="alert alert-success mb-4">
        Bienvenido, @nombre!
    </div>
}

<div class="row">
    <!-- FORMULARIO DE LOGIN -->
    <div class="col-md-6">
        <div class="card mb-4" style="max-width:400px;">
            <div class="card-body">
                <h5 class="card-title">Iniciar Sesión</h5>
                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label asp-for="Correo" class="form-label">Correo</label>
                        <input asp-for="Correo" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Clave" class="form-label">Contraseña</label>
                        <input asp-for="Clave" type="password" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary">Ingresar</button>
                </form>
                @if (ViewBag.Error != null)
                {
                    <div class="text-danger mt-2">@ViewBag.Error</div>
                }
            </div>
        </div>
    </div>

    <!-- FORMULARIO DE CONSULTA POR TRACKING -->
    <div class="col-md-6">
        <div class="card mb-4" style="max-width:400px;">
            <div class="card-body">
                <h5 class="card-title">Consultar Envío</h5>
                <form asp-action="Login" method="get">
                    <div class="mb-3">
                        <label for="nroTracking" class="form-label">Número de Tracking</label>
                        <input id="nroTracking" name="nroTracking" class="form-control"
                               value="@nroTrackingQuery" />
                    </div>
                    <button type="submit" class="btn btn-success">Buscar envío</button>
                </form>
                @if (ViewBag.TrackError != null)
                {
                    <div class="text-danger mt-2">@ViewBag.TrackError</div>
                }
            </div>
        </div>
    </div>
</div>

<!-- MOSTRAR RESULTADO DEL ENVÍO -->
@{
    var envio = ViewBag.Envio as EnvioListadoDto;
}
@if (envio != null)
{
    <div class="card mt-4" style="max-width:600px;">
        <div class="card-body">
            <h5 class="card-title">Envío @envio.NroTracking</h5>
            <dl class="row">
                <dt class="col-sm-4">ID Envío</dt>
                <dd class="col-sm-8">@envio.Id</dd>

                <dt class="col-sm-4">Empleado ID</dt>
                <dd class="col-sm-8">@envio.EmpleadoId</dd>

                <dt class="col-sm-4">Fecha de Creación</dt>
                <dd class="col-sm-8">@envio.FechaCreacion</dd>

                <dt class="col-sm-4">Cliente ID</dt>
                <dd class="col-sm-8">@envio.ClienteId</dd>

                <dt class="col-sm-4">Peso</dt>
                <dd class="col-sm-8">@envio.Peso</dd>

                <dt class="col-sm-4">Tipo de Envío</dt>
                <dd class="col-sm-8">@envio.TipoEnvio</dd>

                <dt class="col-sm-4">Correo</dt>
                <dd class="col-sm-8">@envio.Correo</dd>

                <dt class="col-sm-4">Teléfono</dt>
                <dd class="col-sm-8">@envio.Telefono</dd>
            </dl>

            <h6 class="mt-3">Etapas de Seguimiento</h6>
            <ul class="list-group">
                @foreach (var etapa in envio.Etapas)
                {
                    <li class="list-group-item">
                        <strong>@etapa.Fecha.ToLocalTime():</strong>
                        (@etapa.NombreEmpleado) @etapa.Comentario
                    </li>
                }
            </ul>
        </div>
    </div>
}
